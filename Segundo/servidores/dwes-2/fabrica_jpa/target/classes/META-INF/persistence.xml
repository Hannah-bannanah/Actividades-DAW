<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="fabrica_jpa" transaction-type="RESOURCE_LOCAL">
		<class>modelo.beans.Familia</class>
		<class>modelo.beans.Pedido</class>
		<class>modelo.beans.Perfile</class>
		<class>modelo.beans.Producto</class>
		<class>modelo.beans.ProductosEnPedido</class>
		<class>modelo.beans.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fabrica_ropa?serverTimezone=UTC"/>
			<property name="javax.persistence.jdbc.user" value="fabrica"/>
			<property name="javax.persistence.jdbc.password" value="fabrica"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
